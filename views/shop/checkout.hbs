<div class="row justify-content-md-center ">
    <div class="col-md-5 p-5">
        <h2>Checkout</h2>
        <h4>Your total: ${{total}}</h4>

        <!-- Used to display Element errors. -->
        <div id="card-errors" role="alert" class="{{#if noError}}hidden{{/if}}">
            {{errMsg}}
        </div>

        <form action="/checkout" method="POST" id="payment-form">

            <div class="form-group">
                <label for="name">Full Name</label>
                <input type="text" class="form-control" name="name" aria-describedby="nameHelp" placeholder="Enter your full name">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Address</label>
                <input type="text" class="form-control" name="address" placeholder="Address">
            </div>
            <div class="form-group">
                <label for="card-element">Full Name</label>
                <div id="card-element">
            
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Checkout</button>
        </form>
    </div>
</div>
<script src="https://js.stripe.com/v3/"></script>
<script src="javascripts/checkout.js"></script>