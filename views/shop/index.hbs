<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div id="success" class="alert alert-info" role="alert" {{#if noMessages}}hidden{{/if}}>
                {{successMsg}}
            </div>
        </div>
    </div>
</div>
<div class="container">
    <h1>{{title}}</h1>
     {{#each products}}
    <div class="row">
        {{#each this}}
        <div class="col-md-3">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{this.imagePath}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">${{this.price}}</p>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to the Shopping Cart</a>

                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/each}}
</div>